body {
  font-family: 'Roboto', sans-serif;
}

.menu {
    background-color: #000;
    height: 100%;
    position: fixed;
    top: 0;
    width: 240px;
    left: -240px;
    z-index: -1;
}

.menu ul {
    list-style: none;
    padding-left: 0;
}

.menu li a, .menu li a:visited {
    color: #fff;
    display: block;
    font-size: 18px;
    font-weight: 100;
    padding: 30px 40px;
    text-decoration: none;
}

.icon-menu {
    position: absolute;
    top: 30px;
    left: 30px;
    cursor: pointer;
    width: 24px;
}

.home-main {
  background: url(<%= asset_path 'dandelion-445228_1280.jpg' %>) no-repeat center center;
  background-size: cover;
  height: 700px;
}

.home-main .content {
  position: relative;
  top: 150px;
  text-align: center;
}

.home-main h1 {
  color: #fff;
  font-weight: 100;
  margin-bottom: 30px;
  text-align: center;
  text-shadow: 0 2px 3px rgba(0, 0, 0, 0.4);
}

h1 {
  font-size: 50px;
}

.home-supporting h2, .home-about h2, .about-supporting h2 {
  color: #000;
  margin: 30px 0;
}

h2 {
  font-size: 45px;
  font-weight: 300;
}

.btn-default, .btn-primary {
  border-radius: 0;
  font-size: 16px;
  padding: 12px 26px;
}

.btn-primary {
  background-color: #2E72BD;
}

.home-supporting, .home-about, .about-supporting {
  padding: 80px 0;
  text-align: center;
}

.home-supporting p, .about-supporting p {
  font-size: 21px;
  font-weight: 100;
}

.home-secondary {
  background: url(<%= asset_path 'butterfly-2049567_1280.jpg' %>) no-repeat center center;
  background-size: cover;
  height: 500px;
}

.about-main {
    background: url(<%= asset_path 'butterfly-2049567_1280.jpg' %>) no-repeat center center;
    background-size: cover;
    height: 700px;
}

.about-main .content
{
    position: relative;
    top: 150px;
    text-align: center;
}

.about-main h1 {
    color: #fff;
    font-weight: 100;
    margin-bottom: 30px;
    text-shadow: 0 2px 3px rgba(0,0,0,0.4);
}

.home-supporting, .home-about, .about-supporting {
    padding: 80px 0;
    text-align: center;
}

.home-supporting h2, .home-about h2, .about-supporting h2 {
    color: #000;
    margin: 30px 0;
}

.about-supporting p {
    margin-top: 30px;
}

.home-supporting p, .about-supporting p {
    font-size: 21px;
    font-weight: 100;
}

.footer {
    background-color: #f9f9f9;
    border-top: solid 1px #F5F5F5;
    padding: 40px 0 30px 0;
    text-align: center;
}

.footer p {
    text-transform: uppercase;
    font-size: 12px;
    color: #aaa;
}
